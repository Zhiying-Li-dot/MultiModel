{
  "manifest_version": 3,
  "name": "PVTT Data Collector",
  "version": "1.0",
  "description": "Extract product videos and images from Etsy for PVTT dataset",
  "permissions": [
    "activeTab",
    "downloads",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://www.etsy.com/*",
    "https://*.etsy.com/*",
    "https://v.etsystatic.com/*",
    "https://i.etsystatic.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.etsy.com/*/listing/*",
        "https://*.etsy.com/*/listing/*"
      ],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
